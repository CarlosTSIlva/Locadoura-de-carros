{
    "openapi": "3.0.0",
    "info": {
        "title": "Rentalx Documentation",
        "description": "This is an API documentation for Rentalx",
        "version": "1.0.0",
        "contact": {
            "email": "carlos.silva@boxti.com.br"
        }
    },
    "paths": {
        "/categories": {
            "post": {
                "tags": ["categories"],
                "summary": "Create a new category",
                "description": "Create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "exemple": {
                                    "name": "Categoria 1",
                                    "description": "Categoria 1"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Category created"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "get": {
                "tags": ["categories"],
                "summary": "Get all category",
                "description": "Get all category",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}
